extends layout
block content
	div(class="container" style="margin-top:50px")
		form(ng-controller="arduino")
			div(class="col-md-6 col-xs-6 col-sm-6 col-lg-6")
				div(class="row")
					fieldset
						legend Hacking com Arduino
					div(class="panel panel-default")
						div(class="panel-body") Teste Feito com Dispositivos 443 MHZ
					div(ng-class="Arduino", class="alert" role="alert") {{arduino}}
					div(class="col-md-2 col-xs-2 col-sm-2 col-lg-2")
						label Liga
						button(class="btn glyphicon glyphicon-off btn-primary",ng-click='ligarLuz()', ng-disabled='ligar')
					div(class="col-md-2 col-xs-2 col-sm-2 col-lg-2")
						label Desliga
						button(class="btn glyphicon glyphicon-off btn-danger", ng-click='apagarLuz()', ng-disabled='desligar')
					div(class="col-md-6 col-xs-6 col-sm-6 col-lg-6 col-xs-offset-10 col-sm-offset-10 col-md-offset-10")
						button(class="btn btn-success") Proximo